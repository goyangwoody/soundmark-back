# Database Configuration
POSTGRES_DB=soundmark_db
POSTGRES_USER=soundmark
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Database URL (for API)
DATABASE_URL=postgresql+asyncpg://soundmark:CHANGE_THIS_TO_SECURE_PASSWORD@db:5432/soundmark_db

# Spotify OAuth
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://your-domain.com/api/v1/auth/spotify/callback

# JWT Configuration
JWT_SECRET_KEY=CHANGE_THIS_TO_VERY_LONG_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Application
DEBUG=false
